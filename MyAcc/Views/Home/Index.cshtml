@model IEnumerable<MyAcc.ViewModels.CustomerSalesReportViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .TopButton {
        height: 150px;
        vertical-align: middle;
        width: 200px;
        display: inline-block;
        font-weight: 300;
        text-align: center;
        vertical-align: middle;
        padding: 0.375rem 0.5rem;
        font-size: x-large;
        line-height: 3.0;
        border-radius: 0;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
</style>


<div class="col-md-12">
    <div class="row">

        <div class="col-md-2"></div>

        @foreach (var businessname in Model.GroupBy(c => c.BusinessName))
        {           
       <table>
           <tr>
               <td>
                   <a href="" data-toggle="modal" data-target="#dateModal" class="btn btn-primary btn-block TopButton">Total Sales <h4>£@businessname.Sum(u => u.FinalTotal)</h4></a>
               </td>
               <td>
                   <a href="#" data-toggle="modal" data-target="#dateModal" class="btn btn-success btn-block TopButton">Total Received <h4>£@businessname.Sum(u => u.TotalReceived)</h4></a>
               </td>
               <td>
                   <a href="#" data-toggle="modal" data-target="#dateModal" class="btn btn-warning btn-block TopButton">Total Refund <h4>£@businessname.Sum(u => u.TotalRefund)</h4></a>
               </td>
               <td>
                   <a href="#" data-toggle="modal" data-target="#dateModal" class="btn btn-danger btn-block TopButton">Outstanding <h4>£@businessname.Sum(u => u.OutstandingTotal)</h4></a>
               </td>

           </tr>
        </table>

        }
        <div class="col-md-2"></div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}


