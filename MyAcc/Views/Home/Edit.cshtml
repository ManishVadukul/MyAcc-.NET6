                        //   alert(data[0].productid);

                        var rows = "<tr>" + "<td hidden>" + item.productId + "</td>" + "<td>" + item.productName + "</td>" + "<td class='text-right'>" + parseFloat(item.cost).toFixed(2) + "</td>" + "<td class='text-right'>" + parseFloat(item.price).toFixed(2) + "</td>" + "<td class='text-right'>" + (item.qty) + "</td>" + "<td class='text-right'>" + parseFloat(item.tax).toFixed(2) + "</td>" + "<td class='text-right'>" + parseFloat(item.total).toFixed(2) + "</td>" + "<td style='width:10px;'> <button type='button' value='' name='remove' style=' border:none;' onclick='Delete(" + item.orderDetailId + ")'><i style='color:red;' class='fas fa-times - alt'></i></button </td>" + "<td hidden>" + item.orderDetailId + "</td></tr>";
                        $("#tblProductItem").append(rows);
                    });                    
                },
                error: function () {
                    alert("There is some problem generating new order number.")
                }
            })
        }

        function Delete(Id) {
            var url = "/Home/Delete/" + Id;
            $.ajax({
                url: url,
                type: "POST",
                success: function () {                    
                    //alert("Product item has been deleted.")                    
                  //  var orderid = $("#txtOrderId").val();
                     //ele.closest("tr").remove();
                    //window.location.href = "../../Home/Edit/" + orderid;                    
                    FinalTotal();
