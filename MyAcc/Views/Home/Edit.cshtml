        function GetEditOrderDetail(orderId) {
            $.ajax({
                async: true,
                type: 'GET',
                dataT: 'JSON',
                contentType: 'application/json; charset=utf-8',
                data: { id: orderId },
                url: '/Home/GetEditOrderDetail',
                success: function (data) {
                    // alert(data[0].productid);
                    $("#tblProductItem");
