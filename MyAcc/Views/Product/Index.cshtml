@model IEnumerable<MyAcc.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Item List</h2>
    </div>
    <div class="col-6 text-right">
        <a onclick="showInPopup('@Url.Action("Upsert","Product",null,Context.Request.Scheme)','New Item')" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Create New Item</a>
    </div>
</div>

<div id="view-all">
    <partial name="_viewAll" model="Model" />

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
