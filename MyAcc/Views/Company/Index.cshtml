@model IEnumerable<MyAcc.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-6 text-right">
        <a onclick="showInPopup('@Url.Action("Upsert","Company",null,Context.Request.Scheme)','New Company')" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Company</a>
    </div>
</div>

<div id="view-all">
    @*@<partial name="_viewAll" model="Model" />*@

    @await Html.PartialAsync("_viewAll", Model)

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
